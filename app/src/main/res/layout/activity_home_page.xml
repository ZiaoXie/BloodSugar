<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="njutcm.com.bloodsugar.HomePage">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignTop="@+id/radioGroup"
        android:background="#000000"
        />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#f5eaea"
        android:gravity="center">
        <RadioButton
            android:checked="true"
            android:drawableTop="@mipmap/bloodsugar"
            android:id="@+id/bloodsugar"
            android:text="血糖"
            style="@style/HomePageRadio" />

        <!--<RadioButton-->
            <!--android:drawableTop="@mipmap/askdoctor"-->
            <!--android:id="@+id/askdoctor"-->
            <!--android:text="问医"-->
            <!--style="@style/HomePageRadio" />-->

        <RadioButton
            android:drawableTop="@mipmap/sugarschool"
            android:id="@+id/sugarschool"
            android:text="糖学院"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@mipmap/market"
            android:id="@+id/market"
            android:text="商城"
            style="@style/HomePageRadio" />

        <RadioButton
            android:drawableTop="@mipmap/personal"
            android:id="@+id/personal"
            android:text="我的"
            style="@style/HomePageRadio" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/radioGroup">
    </FrameLayout>
</RelativeLayout>
